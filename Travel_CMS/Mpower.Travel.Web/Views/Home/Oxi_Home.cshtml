@using Microsoft.AspNetCore.Http.Authentication
@inject SignInManager<ApplicationUser> SignInManager
@{
    Layout=null;
}
@model login
<div style="width:100%;">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-2">
          @await Html.PartialAsync("_OxiSideLayout")
          <script>
                    document.getElementById('distribution-main-li').className="active_nav";
                  </script> 
        </div>
        <div class="col-md-10">
          <div class="rt-bg-img" style="margin-left:7px;">
            <div class="row">
              <div class="col-sm-offset-6 col-md-5" style="margin-top:20px;">
                <div class="panel panel-default">
                  <div class="panel-body text-center bg-primary"><strong>OXIGEN RETAILER LOGIN</strong></div>
              <form asp-controller="Home" asp-action="login" method="post" style="margin-top:20px;" class="form-horizontal">
                    <div class="form-group">
                      <label class="control-label col-sm-4" for="usercode">User Code*</label>
                      <div class="col-sm-7">
                        <input type="text"asp-for="accountNo" class="form-control" id="usercode" placeholder="User Code">
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-sm-4" for="pwd">Password*</label>
                      <div class="col-sm-7">
                        <input type="password" asp-for="password" class="form-control" id="pwd" placeholder="Enter password">
                      </div>
                    </div>
                    <div align="center">
                     <recaptcha/>
                     <span class="text-danger">@if(TempData["msg"]!=null)
                       {
                       @TempData["msg"].ToString()
                       }</span>
                    </div>
                     
                    <div class="form-group">
                      <div class="col-xs-offset-2 col-sm-5" style="padding-top:15px;">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" asp-for="rememberPassword">
                            Remember me</label>
                        </div>
                      </div>
                      <div class="col-xs-offset-2 col-sm-3">
                        <button type="submit" class="btn btn-primary btn-md">Login</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-3 color-bg-lgblue" style="border:1px solid #005aa6;margin-top:10px;margin-left:30px;">
                <p style="margin-left:75px;color:red;"><b>To register </b></p>
                <p style="margin-left:20px;color:red;"><b>as a franchise with Oxigen Rail</b><br/>
                  <button style="margin-left:40px;color:white;background-color:#005aa6;width:110px;height:30px;">Click Here</button>
                </p>
              </div>
              <div class="col-sm-8 color-bg-lgblue" style="border:1px solid #005aa6;margin-top:10px;margin-left:20px;">
                <div class="col-sm-12">
                  <p style="color:red;font-size:20px;"><br/>
                    <b>IMPORTANT NOTICE FOR RETAILER</b><br/>
                  </p>
                  <p>1.It is important for Oxigen Rail Agent to fill up the Reservation Slip from customer and  keep with him for records all the time.<br/>
                    2.Charging higher amount than e-ticket is strictly prohibited and will lead to immediate cancellation of Oxigen Rail licence and lead action by IRCTC.<br/>
                    3.Online booking/enquiry will be available between 00:30 Hrs and 23:30 Hrs.<br/>
                    4.Student identity card with photograph issued by recognized school/college and Nationalized Bank Passbook with photograph will also be accepted as proof for travelling with etickets. </p>
                </div>
              </div>
            </div>
            <div class="row" style=" margin-top:10px;margin-left:25px;"> <strong>Customer Care Contact Numbers:</strong> TATA All India Universal Access Number : 126699 | 
              MTNL /BSNL/ALL Other 
              Operators | All India Universal Access Number:<strong>1860 180 2214</strong> </div>
          </div>
        </div>
      </div>
    </div>
    <br/>
    <br/>
     <modal visible="showModal">
				<span ng-style="{color : (Error)== true ? 'red' : 'green'}">{{Message}}</span>
			</modal>
  </div>
  </div>
