@model Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole
@{
    ViewBag.Title = "Create New Role";
}
 <section class="content-header">
      <h1>
      @ViewData["Title"]
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Role</a></li>
        <li class="active">Create</li>
      </ol>
 </section>
 <section class="content">
        <div class="row">
            <div class="col-md-10">
@using (Html.BeginForm())
{
   <div class="form-group">
        <label class="col-md-3 control-label">Enter Role Name To be Created:</label>
        <div class="col-md-6">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
         <span colspan="2" style="color:green">@ViewBag.msg</span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <br/>
    <input type="submit" class="btn btn-default" value="Create Role" />
        </div>
    </div>
}
            </div>
        </div>
 </section>
  @section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
     }