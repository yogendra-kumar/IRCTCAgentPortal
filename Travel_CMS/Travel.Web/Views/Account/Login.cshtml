@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
   
 @{
     ViewData["Title"] = "Log in";
 }
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <!--<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>-->
          <h1 class="text-center">Login</h1>
      </div>
      <div class="modal-body">
          
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form col-md-12 center-block">
              
            <div class="form-group">
              <input asp-for="Email" class="form-control input-lg" style="width:100%" placeholder="Email">
               <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input asp-for="Password" style="width:100%" class="form-control input-lg" placeholder="Password">
             <span asp-validation-for="Password" class="text-danger"></span>
            </div>
             <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>            
            <!--<p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>-->
            </div>
          
      </div>
          </form>
      <div class="modal-footer">
          <!--<div class="col-md-12">
          <button class="btn" type="submit" >Cancel</button>
		  </div>	-->
      </div>
  </div>
  </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
</section>
</div>
