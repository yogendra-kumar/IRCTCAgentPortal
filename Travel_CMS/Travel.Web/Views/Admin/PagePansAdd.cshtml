@model RegisterViewModel
@{
    Layout=null;
    ViewData["Title"] = "Add Page Pan(s)";
}
<section class="content-header">
      <!--<h1>
      @ViewData["Title"]
      </h1>-->
      <!--<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Page Pan(s)</li>
      </ol>-->
 </section>
 <section class="content">
        <div class="row">
            <div class="container">
    <form  class="form-horizontal" novalidate name="PagePanForm">
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label"> Title:</label>
          <span style="color:red">*</span>
        <div class="col-md-8">
            <input type="text" maxlength="150" name="titleName" required data-ng-model="Pans.title" class="form-control"/>
            <span ng-show="PagePanForm.titleName.$error.required" class="text-danger">
      Mandatory field
    </span>
        </div>
    </div>
    
     <div class="form-group">
        <label class="col-md-2 control-label"> Pan Content:</label>
         <span style="color:red">*</span>
        <div class="col-md-8">
            <textarea ng-model="Pans.blockHtml" maxlength="10000" name="panEditor" data-ck-editor></textarea>
            </textarea >
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"> Script File:</label>
        <div class="col-md-8">
            <span class="btn btn-default btn-file">Browse<input onchange="angular.element(this).scope().setFevFile(this)" ng-model="scriptFileId" type="file" accept="image/*" /></span>
            <img ng-model="logo" class="img-responsive" />
        </div>
    </div>
    <div class="form-group">        
        <div class="col-md-offset-4 col-md-8">
            <button type="submit" ng-click="save()" class="btn btn-primary ">Submit</button>
            <!--<button type="submit" ng-click="bak()" class="btn btn-default ">Cancel</button>-->
             <a href="Admin/PagePans" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form><modal visible="showModal">
      <span ng-style="{color : (Error)== true ? 'red' : 'green'}">{{Message}}</span>
    </modal>
    <!--Loader-->
	<loading></loading>
            </div>
        </div>
 </section>
