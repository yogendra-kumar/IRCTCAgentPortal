@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

 <section class="content-header">
      <h1>
      @ViewData["Title"]
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Account</a></li>
        <li class="active">Change Password</li>
      </ol>
 </section>
 <section class="content">
        <div class="row">
            <div class="col-md-10">
<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldPassword" class="col-md-3 control-label"></label>
        <div class="col-md-8">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-3 control-label"></label>
        <div class="col-md-8">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
        <div class="col-md-8">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-8">
            <button type="submit" class="btn btn-default">Change password</button>
        </div>
    </div>
</form>
            </div>
            </div>
 </section>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
